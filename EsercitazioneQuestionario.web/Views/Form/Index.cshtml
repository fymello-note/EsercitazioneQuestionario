@model EsercitazioneQuestionario.web.Models.Question.FormViewModel

@if (Model.Questions.Count == 0)
{
    <h1>Non è presente alcuna domanda al momento.</h1>
}
<form method="post" class="form-control">
    <div class="mb-2">
        <ol class="list-group list-group-numbered">
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                string idForTrue = $"answer{i}True";
                string idForFalse = $"answer{i}False";
                <li class="list-group-item">
                    <p>@Model.Questions[i].Text</p>
                    @Html.HiddenFor(m => m.Questions[i].Text)

                    <label for="@(idForTrue)" class="me-2">
                        @Html.RadioButtonFor(m => m.Questions[i].Answer, true, new { id = idForTrue}) Sì
                    </label>
                    <label for="@(idForFalse)">
                        @Html.RadioButtonFor(m => m.Questions[i].Answer, false, new { id = idForFalse }) No
                    </label>
                </li>
            }
        </ol>
    </div>

    <button type="submit" class="btn btn-primary">Invia</button>
</form>

